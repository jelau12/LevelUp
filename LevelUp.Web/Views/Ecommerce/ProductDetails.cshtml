@model LevelUp.Entities.Models.Product

@{
    ViewData["Title"] = Model.Name;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/product.css">
</head>
<body>
    <div class="row">
        <div class="column">
            <img src="@Model.PicturePath" />
        </div>

        <div class="column">

            <div class="productText">
                <h3>@Model.Name</h3>
                <h2 class="price">$@Model.Price</h2>
                <a><span>In Stock</span> : @Model.Quantity</a>
                <hr />
                <p>Change This so it isnt Hard Coded</p>
            </div>

            <div class="cardArea">
                <div class="countBlock">

                </div>
                <div class="addToCart">
                    <a href="#" class="btn">ADD TO CART</a>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
