@model IEnumerable<LevelUp.Entities.Models.Product>

@{
    ViewData["Title"] = "LevelUp";
}

@foreach (var item in Model)
{
    <div class="products">
        <div>
            <img src="@item.PicturePath" />
        </div>
        <div>
            <h3>
                <a asp-action="ProductDetails" asp-route-id="@item.Id">@item.Name</a>
            </h3>
            <span>$@item.Price</span>
        </div>
    </div>
}